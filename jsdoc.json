{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": "broker.js",
        "exclude": ["node_modules", "public/assets/libs", "public/socketcluster.js"],
        "includePattern": "\\.js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "node_modules/better-docs",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
